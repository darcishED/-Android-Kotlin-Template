<resources>

    <!-- Splash screen. -->
    <style name="SplashTheme" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Base theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand Color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="AppTheme" />

    <!-- Base application light theme. -->
    <style name="Base.AppTheme.Light" parent="Base.AppTheme">
        <!-- Toolbar. -->
        <item name="toolbarStyle">@style/AppBarOverlay.Light</item>
        <!-- Activity Window Background. -->
        <item name="windowBackground">@color/white</item>
        <!-- Primary TextView Style. -->
        <item name="textViewPrimary">@style/textViewPrimaryLight</item>
        <!-- Secondary TextView Style. -->
        <item name="textViewSecondary">@style/textViewSecondaryLight</item>
        <!-- Alternate TextView Style. -->
        <item name="textViewAlternate">@style/textViewAlternateLight</item>
        <!-- Primary Button Style. -->
        <item name="buttonPrimary">@style/buttonPrimaryLight</item>
        <!-- Secondary Button Style. -->
        <item name="buttonSecondary">@style/buttonSecondaryLight</item>
        <!-- Circle Indicator Style. -->
        <item name="ciDrawable">@drawable/circle_white</item>
        <item name="ciDrawableUnselected">@drawable/circle_light_gray</item>
        <!-- Other custom styles. -->
    </style>

    <!-- Base application dark theme. -->
    <style name="Base.AppTheme.Dark" parent="Base.AppTheme">
        <!-- Toolbar. -->
        <item name="toolbarStyle">@style/AppBarOverlay.Dark</item>
        <!-- Activity Window Background. -->
        <item name="windowBackground">@color/black</item>
        <!-- Primary TextView Style. -->
        <item name="textViewPrimary">@style/textViewPrimaryDark</item>
        <!-- Secondary TextView Style. -->
        <item name="textViewSecondary">@style/textViewSecondaryDark</item>
        <!-- Alternate TextView Style. -->
        <item name="textViewAlternate">@style/textViewAlternateDark</item>
        <!-- Primary Button Style. -->
        <item name="buttonPrimary">@style/buttonPrimaryDark</item>
        <!-- Secondary Button Style. -->
        <item name="buttonSecondary">@style/buttonSecondaryDark</item>
        <!-- Circle Indicator Style. -->
        <item name="ciDrawable">@drawable/circle_black</item>
        <item name="ciDrawableUnselected">@drawable/circle_gray</item>
        <!-- Other custom styles. -->
    </style>

    <!-- Application light theme. -->
    <style name="AppTheme.Light" parent="Base.AppTheme.Light" />

    <!-- Application dark theme. -->
    <style name="AppTheme.Dark" parent="Base.AppTheme.Dark" />

    <!-- Toolbar style. -->
    <style name="Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/elmissiri_semi_bold</item>
    </style>

    <style name="AppBarOverlay.Light" parent="Base.AppBarOverlay">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppBarOverlay.Dark" parent="Base.AppBarOverlay">
        <item name="colorControlNormal">?colorAccent</item>
    </style>

    <!-- TextView style. -->
    <style name="textViewPrimaryLight" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewPrimaryDark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewSecondaryLight" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="textViewSecondaryDark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="textViewAlternateLight" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="textViewAlternateDark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <!-- Button style. -->
    <style name="buttonPrimaryLight" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_rounded_8dp_purple_500</item>
    </style>

    <style name="buttonPrimaryDark" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_rounded_8dp_purple_200</item>
    </style>

    <style name="buttonSecondaryLight" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_rounded_8dp_purple_200</item>
    </style>

    <style name="buttonSecondaryDark" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_btn_rounded_8dp_purple_500</item>
    </style>
</resources>
